@{ Layout = null;}

@helper FileUpload(
    string uniqueid,
    string path,
    string filetypes = ".jpg, .png, .jpg, .jpeg, .gif, .bmp, .svg,.pdf, .docx,.doc, .ppt, .pptx,.xls, .xlsx, .txt",
    string allowlist = "true",
    string allowmultiple = "false",
    string allowdelete = "true",
    string allowdownload = "false",
    string filelength = "166048576",
    string filename = null,
    string videoplayer=null,
    string audioplayer = null,
    string minimagesize=null
    )
{
<div class="row">
    <div class="col-md-6">
        <div id="dvFileUpload_@uniqueid" data-path="@path" data-allowlist="@allowlist" style="height:100%;"
             data-allowmultiple="@allowmultiple" data-uniqueid="@uniqueid" class="dragable-container"
             data-filename="@filename" data-filetypes="@filetypes" data-filelength="@filelength" data-videoplayer="" data-audioplayer="" data-minimagesize="@minimagesize">
            <input type="file" class="dragable-file" accept="@filetypes" @(allowmultiple == "true" ? "multiple" : "")>
        </div>
    </div>
    <div class="col-md-6">
        <div class="progress"  id="@(uniqueid)_dvBackFuUpload" style="display:none;height:20px !important;">
            <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                 aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" >
                <span id="@(uniqueid)_dvBackFuUpload_per"></span>
            </div>
        </div>


        <div id="dvFileList_@uniqueid" data-path="@path"
             data-allowdelete="@allowdelete" data-allowdownload="@allowdownload" data-allowmultiple="@allowmultiple" data-uniqueid="@uniqueid" data-filetypes="@filetypes">
            <ul id="ulFileList"></ul>
        </div>
    </div>
</div>
 }
